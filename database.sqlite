

CREATE TABLE SOLAR_SYSTEM(NUMBER                  INT                     NOT NULL,
LETTER                  TEXT                    NOT NULL,
NAME                    TEXT                    NOT NULL,
TYPE                    TEXT                    NOT NULL,
TEMPERATURE             INT                     NOT NULL,
SURFACE                 REAL                    NOT NULL,
MAGNETIC_FIELD          INT                     NOT NULL,
RESOURCES               INT                     NOT NULL,
DISTANCE                INT                     NOT NULL,
ECCENTRICITY            REAL                    NOT NULL,
ROTATION                INT                     NOT NULL
);

CREATE TABLE PLANETS(REALM TEXT PRIMARY KEY NOT NULL,
NUMBER  INT NOT NULL,
LETTER TEXT NOT NULL,
NAME TEXT NOT NULL,
TYPE TEXT NOT NULL,
TEMPERATURE INT NOT NULL,
ATMOSPHERE TEXT,
SURFACE REAL NOT NULL,
DISTANCE INT NOT NULL,
ECCENTRICITY REAL NOT NULL,
ROTATION INT NOT NULL,
FOREIGN KEY (REALM) REFERENCES COLONIES (REALM)
);

CREATE TABLE GAME_DATA(ID TEXT PRIMARY KEY UNIQUE,
LEVEL INT,
SOLDIERS_LEVEL INT,
SCIENTISTS_LEVEL INT,
SLAVES_LEVEL INT,
DIAMONDS INT,
FUEL INT,
WARP_DRIVE INT,
PROTOZOO INT,
PSEUDOMONA INT,
STAPHILLOCCOCUS INT,
METAL INT,
DRONES INT,
CYBORGS INT,
POINTS INT,
DEFEATS INT,
VICTORIES INT,
COLONIES INT
);

CREATE TABLE COLONIES(
REALM TEXT PRIMARY KEY UNIQUE,
NUMBER INT NOT NULL UNIQUE,
);

CREATE TABLE ENEMIES(ENEMYID TEXT PRIMARY KEY UNIQUE,
COLONIES INT
);

CREATE TABLE USERS_DATA(USERNAME TEXT PRIMARY KEY UNIQUE,
PASSWORD TEXT NOT NULL
);

CREATE TABLE RESOURCES(TYPE TEXT PRIMARY KEY,
PROTOZOO INT,
PSEUDOMONA INT,
STAPHILLOCCOCUS INT,
METAL INT,
MERCURY INT,
GAS INT,
DIAMONDS INT,
SPECIMENS INT,
FOREIGN KEY (TYPE) REFERENCES PLANETS (TYPE));

