

CREATE TABLE SOLAR_SYSTEM (NUMBER                  INT                     NOT NULL,
LETTER                  TEXT                    NOT NULL,
NAME                    TEXT                    NOT NULL,
TYPE                    TEXT                    NOT NULL,
TEMPERATURE             INT                     NOT NULL,
SURFACE                 REAL                    NOT NULL,
MAGNETIC_FIELD          INT                     NOT NULL,
RESOURCES               INT                     NOT NULL,
DISTANCE                INT                     NOT NULL,
ECCENTRICITY            REAL                    NOT NULL,
ROTATION                INT                     NOT NULL
);

CREATE TABLE PLANETS (REALM TEXT PRIMARY KEY NOT NULL,
NUMBER  INT NOT NULL,
LETTER TEXT NOT NULL,
NAME TEXT NOT NULL,
TYPE TEXT NOT NULL,
TEMPERATURE INT NOT NULL,
SURFACE REAL NOT NULL,
MAGNETIC_FIELD INT NOT NULL,
RESOURCES INT NOT NULL,
DISTANCE INT NOT NULL,
ECCENTRICITY REAL NOT NULL,
ROTATION INT NOT NULL,
EMPTY INT NOT NULL,
FOREIGN KEY (NUMBER) REFERENCES COLONIES (ID));

CREATE TABLE GAME_DATA (ID INT PRIMARY KEY NOT NULL,
LEVEL INT NOT NULL,
SOLDIERS_LEVEL INT NOT NULL,
SCIENTISTS_LEVEL INT NOT NULL,
SLAVES_LEVEL INT NOT NULL,
DIAMONDS INT NOT NULL,
FUEL INT NOT NULL,
WARP_DRIVE INT NOT NULL,
PROTOZOO INT NOT NULL,
PSEUDOMONA INT NOT NULL,
STAPHILLOCCOCUS INT NOT NULL,
METAL INT NOT NULL,
DRONES INT NOT NULL,
CYBORGS INT NOT NULL,
POINTS INT NOT NULL,
DEFEATS INT NOT NULL,
VICTORIES INT NOT NULL,
COLONIES INT NOT NULL,
FOREIGN KEY (ID) REFERENCES GAME_DATA (ID));

CREATE TABLE COLONIES (ID INT NOT NULL,
REALM TEXT PRIMARY KEY UNIQUE,
NUMBER INT NOT NULL UNIQUE,
FOREIGN KEY (ID) REFERENCES GAME_DATA (ID));

CREATE TABLE ENEMIES(ENEMYID TEXT PRIMARY KEY UNIQUE,
COLONIES INT
);

CREATE TABLE USERS_DATA(USERNAME TEXT PRIMARY KEY UNIQUE,
PASSWORD TEXT NOT NULL
);

CREATE TABLE RESOURCES (ID INT PRIMARY KEY NOT NULL,
RESOURCES INT NOT NULL,
PROTOZOO INT NOT NULL,
PSEUDOMONA INT NOT NULL,
STAPHILLOCCOCUS INT NOT NULL,
METAL INT NOT NULL,
MERCURY INT NOT NULL,
GAS INT NOT NULL,
DIAMONDS INT NOT NULL,
SPECIMENS INT NOT NULL,
FOREIGN KEY (RESOURCES) REFERENCES PLANETS (RESOURCES));

